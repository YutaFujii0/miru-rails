<% @orders.each_with_index do |order, index| %>
  <div class="card-order-list <%= "active" if index == 0 %>">
    <%= cl_image_tag(order.food.images[0], width: 75, height: 75, crop: "fill", class: "img-circle list-#{index} img-top" ) %>
    <div class="triangle-wrap">
      <div class="triangle"></div>
    </div>
  </div>
<% end %>
